aside
  - if false  # not implemented yet
    i.icon-search-2
    form
      input.search type="search" placeholder="Search..."
  - content_for :head do
    = auto_discovery_link_tag(:rss, blog_articles_url(format: "rss"))

  = link_to blog_articles_url(format: "rss"), class: "subscribe-link" do
    | Subscribe to our RSS
    i.icon-rss

  - if @rails_tip
    .box-opacity.tip-day
      h2
        span.circle
          i.icon-diamond

        | Rails Tip

      p
        = link_to @rails_tip.title, @rails_tip.link, target: "_blank"
        |&nbsp;
        = @rails_tip.description

      = link_to blog_tips_path('rails_tips'), class: 'bottom-link' do
        | See previous
        span +
  
  - if @rails_tip
    .box-opacity.rails-tip
      h2
        span.circle
          i.icon-smiley

        | WebDev Tip
      p
        = link_to @today_tip.title, @today_tip.link, target: "_blank"
        |&nbsp;
        = @today_tip.description

      = link_to blog_tips_path(type: 'today_tips'), class: 'bottom-link' do
        | See previous
        span +

  - if @categories.any?
    .box-opacity.categories
      ul.list-categories
        li = link_to 'All', blog_path_path
        - @categories.each do |category|
          li= link_to category.name, blog_category_path(category.slug)

      a.close href="javascript:void(0)"
        | CERRAR
        span x
